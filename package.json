{
  "name": "nuxt-starter",
  "type": "module",
  "private": true,
  "description": "A modern Vue3 application template based on Nuxt, integrating TypeScript, Pinia, TailwindCSS, PrimeVue and other tools, providing internationalization support and animation effects, using Anthony Fu's ESLint configuration to ensure code quality.",
  "author": "hixb <hellozxb252@gmail.com> (https://github.com/hixb/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techfusionlab/nuxt-starter.git"
  },
  "bugs": {
    "url": "https://github.com/techfusionlab/nuxt-starter/issues"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "dependencies": {
    "@nuxt/fonts": "0.11.4",
    "@nuxt/image": "1.10.0",
    "nuxt": "^3.17.5",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
